---
import { ClientRouter } from "astro:transitions";
import { seoContent } from "../utils/seo.js";
import "@fontsource/poppins";
import Nav from "../modules/Nav.astro";
import Footer from "../modules/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="../../node_modules/lite-youtube-embed/src/lite-yt-embed.css"
    />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={seoContent} />

    <ClientRouter />
    <title>Tecmasoft</title>
  </head>

  <body>
    <Nav />
    <slot />
    <Footer />
  </body>
</html>

<script src="../../node_modules/lite-youtube-embed/src/lite-yt-embed.js"
></script>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Poppins";
    @apply bg-azulOscuro;
    @apply text-white;
    /* scroll-behavior: smooth; */
  }
  .dynamic-container {
    max-width: 1250px;
    width: 90%;
    margin: 0 auto;
  }
  .shadow-card:hover {
    box-shadow: 2px 4px 50px -20px rgba(14, 58, 122, 1);
    -webkit-box-shadow: 2px 4px 50px -20px rgba(14, 58, 122, 1);
    -moz-box-shadow: 2px 4px 50px -20px rgba(14, 58, 122, 1);
  }
</style>
